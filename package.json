{
  "name": "baby-alphabet-slideshow",
  "version": "1.6.0",
  "description": "Interactive toddler learning slideshow with alphabet, numbers, category flashcards, and optimized image assets.",
  "private": true,
  "type": "module",
  "keywords": [
    "kids-learning",
    "toddler-app",
    "flashcards",
    "alphabet-learning",
    "numbers-learning",
    "early-education",
    "preschool",
    "pwa",
    "vite",
    "javascript",
    "offline-app",
    "image-optimization",
    "github-pages"
  ],
  "scripts": {
    "dev": "vite",
    "dev:unified:web": "npm run web --prefix apps/mobile",
    "dev:unified:mobile": "npm run start --prefix apps/mobile",
    "assets:generate": "node scripts/generate-local-card-assets.mjs",
    "assets:optimize": "node scripts/optimize-assets.mjs",
    "version:bump:minor": "npm version minor --no-git-tag-version",
    "version:bump:major": "npm version major --no-git-tag-version",
    "mobile:sync-content": "node scripts/export-mobile-content.mjs",
    "build:core": "vite build",
    "build": "npm run version:bump:minor && npm run assets:optimize && npm run build:core",
    "build:major": "npm run version:bump:major && npm run assets:optimize && npm run build:core",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "sharp": "^0.34.5",
    "svgo": "^4.0.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "twemoji": "^14.0.2"
  }
}
